{
  "name": "Data Science Class",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "redhat.vscode-yaml"
      ]
    }
  },
  "forwardPorts": [8888],
  "postCreateCommand": "pip install --user -r requirements.txt",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
        "version": "3.9"
    }
  }
}
